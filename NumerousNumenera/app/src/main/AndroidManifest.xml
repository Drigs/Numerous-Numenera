<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="numerous.numenera.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="numerous.numenera.app.Title"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="numerous.numenera.app.MainMenu"
            android:label="@string/title_thing_detail"
            android:parentActivityName="numerous.numenera.app.Title" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="numerous.numenera.app.ThingListActivity" />
        </activity>
    </application>

</manifest>
